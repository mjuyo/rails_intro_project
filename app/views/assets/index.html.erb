<h1>Assets</h1>

<table>
  <thead>
    <tr>
      <th>Asset ID</th>
      <th>Asset Class</th>
      <th>Park Name</th>
      <th>Asset Type</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @assets.each do |asset| %>
      <tr>
        <td><%= asset.asset_id %></td>
        <td><%= asset.asset_class %></td>
        <td><%= asset.park_name %></td>
        <td><%= asset.asset_type %></td>
        <td><%= link_to 'Show', asset_path(asset) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
